<!doctype html>
<html>
<% include shared/head %>
<% include shared/nav %>
    <body>
        <div class="container">
            <h1 class="text-center">Any news?</h1>
            <% if (data) { %>
                <% if (data.status == 200) { %>
                    <div class="alert alert-success" role="alert">
                        <%= data.message %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                    </div>
                <% } else { %>
                    <div class="alert alert-danger" role="alert">
                        <%= data.message %>
                    </div>
                <% } %>
            <% } %>
            <form method="POST" action="/make-data">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Small title</label>
                        <input name="smallTitle" type="text" class="form-control" placeholder="new feature in js">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Big title</label>
                        <input name="bigTitle" type="text" class="form-control" placeholder="Changing your JS mind">
                    </div>
                </div>
                <div class="form-group">
                    <label>about</label>
                    <input name="about" type="text" class="form-control" placeholder="Text trying change your mind about Js, let's show the good parts of JS">
                </div>
                <div class="form-group">
                    <label>Full text</label>
                    <textarea name="fullText" class="form-control" placeholder="Apartment, studio, or floor"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </body>
<% include shared/footer %>
</html>